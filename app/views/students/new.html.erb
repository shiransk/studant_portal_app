<h1>Create Account</h1>

<%= form_tag "/students", method: :post do %>
  <div>
    <%= label_tag :first_name %>
    <%= text_field_tag :first_name, "", placeholder: "Last Name" %>
  </div>
  <div>
    <%= label_tag :last_name %>
    <%= text_field_tag :last_name, "", placeholder: "Last Name" %>
  </div>
  <div>
    <%= label_tag :email %>
    <%= text_field_tag :email, "", placeholder: "Email Address" %>
  </div>
  <div>
    <%= label_tag :phone_number %>
    <%= text_field_tag :phone_number, "", placeholder: "Phone Number" %>
  </div>
  <div>
    <%= label_tag :password %>
    <%= hidden_field_tag :password, "", placeholder: "Password" %>
  </div>
  <div>
    <%= label_tag :password_confirmation %>
    <%= hidden_field_tag :password_confirmation, "", placeholder: "Password Confirmation" %>
  </div>
  <div>
    <%= submit_tag "Create Account" %>
  </div>
<% end %>